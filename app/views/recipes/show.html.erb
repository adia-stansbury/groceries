<div class="page-header">
  <h1 class="text-center">
    <%= @recipe.name %> 
    <small> 
      <%= link_to 'Edit', edit_recipe_path(@recipe) %>
      <%= link_to(
        'Delete', 
        recipe_path(@recipe), 
        method: :delete, 
        data: { confirm: 'Are you sure?' } 
      )%>
    </small>
  </h1>
</div> 
<h3>Recipe's Ingredients:</h3>
<%= render 'recipe_ingredients/recipe_ingredient' %>
<h3 class="text-center">Add ingredients</h3>
<%= render 'recipe_ingredients/form' %>
<h3 class="text-center">Total amount of nutrients for this recipe</h3>
<h6 class="text-center">values represent amt of nutrient for 100g of ingredient, not yet adjusted for amt of ing in recipes</h6>
<%= render 'ingredient_nutrients/index' %>

