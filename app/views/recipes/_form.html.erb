<div class="jumbotron">
  <%= form_for @recipe do |f| %>
    <form>
      <div class="form-group">
        <%= f.label(:name) %>
        <%= f.text_field(:name, class:"form-control") %>
      </div>
      <div class="form-group">
        <%= f.label(:number_of_servings) %>
        <%= f.text_field(:number_of_servings, class:"form-control") %>
      </div>
      <%= f.submit(class:"btn btn-success") %>
    </form>
  <% end %>
</div>
