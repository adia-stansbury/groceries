<div class="page-header"><h1>Add new recipe name</h1></div>
<form class="navbar-form navbar-left">
  <div class="form-group">
    <%= form_for @recipe do |f| %>
      <%= f.label(:name) %>:
      <%= f.text_field(:name, class:"form-control") %>
      <%= f.submit(class:"btn btn-default") %>
    <% end %>
  </div>
</form>
