<h2 class="text-center">Create MealPlan</h2>
<%= form_for @meal_plan do |f| %>
  <%= f.label :consumer_id %>
  <%= f.select(:consumer_id, options_from_collection_for_select(
      @consumers, 
      'id', 
      'name', 
      class:"form-control"
    )
  ) %>
    <%= f.select(:recipe_ids, options_from_collection_for_select(
        @recipes, 
        :id, 
        :name    
      )
    ) %>
  <%= f.submit("Create Meal Plan", class:"btn btn-primary") %>
</form><% end %>
