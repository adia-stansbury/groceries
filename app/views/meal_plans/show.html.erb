<h3 class="text-center">Meal Plan's Recipes</h3>
<% if @meal_plan.meal_plan_recipes.present? %>
  <ul class="list-group">
    <% @meal_plan.meal_plan_recipes.each do |mpr| %>
      <% if mpr.recipe.present? %>
        <li class="list-group">
          <%= mpr.try(:number_of_recipes) %> <%= mpr.recipe.name %> (<%= mpr.recipe.try(:number_of_servings) %> Servings)
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>
<%= render 'meal_plan_recipes/form' %>
<% if @meal_plan.recipes.present? %>
  <h3 class="text-center">Total amount of nutrients for this meal plan</h3>
  <%= render 'ingredient_nutrients/index' %>
<% end %>
