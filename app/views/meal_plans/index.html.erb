<div class="container-fluid">
  <div class="page-header">
    <h3>
      Create grocery list. View nutrient facts for the week.
    </h3>
  </div>
  <%= form_tag("/grocery_lists/new", method: "get") do %>
    <% @meal_plans.each do |meal_plan| %>
      <div class="jumbotron">
        <div class="page-header">
          <%= check_box_tag('meal_plan_ids[]', meal_plan.id, checked = true) %>
          <%= label_tag('meal_plan_id[meal_plan.id]', ( link_to meal_plan.created_at, meal_plan_path(meal_plan)
          )) %> 
          <%= meal_plan.consumer.name %>
        </div>
        <table class="table">
          <tr>
            <th>Recipe</th>
            <th>Servings</th>
          </tr>
        <% meal_plan.recipes.each do |recipe| %>
          <tr>
            <td><%= link_to recipe.name, recipe_path(recipe) %></td> 
            <td><%= recipe.number_of_servings %></td>
          </tr>
        <% end %></table>
      </div>
    <% end %>
    <%= submit_tag("Create Grocery List", class:"btn btn-success") %>
  <% end %>
</div>
