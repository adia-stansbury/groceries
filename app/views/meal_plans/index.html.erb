<div class="container-fluid">
  <div class="page-header">
    <h3>
      Create grocery list. View nutrient facts for the week.
    </h3>
  </div>
  <div class="panel-body">
    <%= form_tag("/lists/new", method: "get") do %>
      <ul style="list-style:none">
        <% @meal_plans.each do |meal_plan| %>
          <li>
            <%= check_box_tag('meal_plan_ids[]', meal_plan.id) %>
            <%= label_tag('meal_plan_id[meal_plan.id]', (
              link_to meal_plan.created_at, meal_plan_path(meal_plan)
            )) %> 
            <%= meal_plan.consumer.name %>
          </li>
          <ul>
            <% meal_plan.recipes.each do |recipe| %>
              <li><%= link_to recipe.name, recipe_path(recipe) %> (<%= recipe.number_of_servings %> Servings)</li>
            <% end %>
          </ul>
        <% end %>
      </ul>
      <%= submit_tag("Create Grocery List", class:"btn btn-success") %>
    <% end %>
  </div>
</div>
