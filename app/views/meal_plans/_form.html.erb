<%= form_for @meal_plan do |f| %>
  <%= f.label :consumer_id %>
  <%= f.select(
    :consumer_id, 
    options_from_collection_for_select(@consumers, 'id', 'name'),
    { prompt: true },
    class: 'js-dropdown form-control' 
  ) %></br>
  <%= f.submit("Create Meal Plan", class:"btn btn-success") %>
<% end %>
