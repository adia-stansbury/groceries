<div class="container-fluid">
  <div class=page-header><h3>Edit <%= @ingredient %> for <%= @recipe %></h3></div>
  <div class="jumbotron">
    <%= form_for @recipe_ingredient do |f| %>
      <form>
        <div class="form-group">
          <%= f.label(:quantity) %>
          <%= f.text_field(:quantity, class:"form-control") %>
        </div>
        <div class="form-group">
          <%= f.label(:unit_id) %>
          <%= f.collection_select(
            :unit_id,
            @units,
            :id, 
            :name,
            class:"form-control"
          ) %>
        <div class="form-group">
          <%= f.label(:amount_in_grams) %>
          <%= f.text_field(:amount_in_grams, class:"form-control") %>
        </div>
        <%= f.submit(class:"btn btn-success") %>
      </form>
    <% end %>
  </div>
</div>
