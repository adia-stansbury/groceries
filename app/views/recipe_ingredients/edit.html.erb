<%# <% TODO: this is only here to show amt of grams for recipe ingredient, would be better if upon selecing ingredient for recipe, this info shows up on recipe view %>
<div>Edit <%= @ingredient.name %> for <%= @recipe %></div>
<% if @measuring_amount.present? %>
  Package size:
  <%= @measuring_amount %> <%= @unit %>,
  <%= @ingredient.num_of_grams_in_measuring_amount %> grams
<% end %>
<%= form_for @recipe_ingredient do |f| %>
  <form>
    <div class="form-group">
      <%= f.label(:quantity) %>
      <%= f.text_field(:quantity, class:"form-control") %>
    </div>
    <div class="form-group">
      <%= f.label(:unit_id) %>
      <%= f.collection_select(:unit_id, @units, :id, :name, {},
                              class:"js-dropdown form-control") %></br>
    <div class="form-group">
      <%= f.label(:amount_in_grams) %>
      <%= f.text_field(:amount_in_grams, class:"form-control") %>
    </div>
    <%= f.submit(class:"btn btn-success") %>
  </form>
<% end %>
