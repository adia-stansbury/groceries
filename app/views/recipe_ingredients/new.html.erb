<%= form_for @recipe_ingredient do |f| %>
  <%= f.collection_select(:recipe_id, @recipes, :id, :name) %>
  <%= f.collection_select(:ingredient_id, @ingredients, :id, :name) %>
  <%= f.label(:quantity) %>
  <%= f.text_field(:quantity) %>
  <%= f.label(:unit) %>
  <%= f.text_field(:unit) %>
  <%= f.submit(class:"btn btn-primary") %>
<% end %>
