<form class="form-horizontal">
  <%= form_for @ingredient do |f| %>
    <% @ingredient_attributes.each do |attribute| %>
      <div class="form-group">
        <%= f.label(attribute, class:"col-sm-2 control-label") %>
        <div class="col-sm-10">
          <%= f.text_field(attribute, class:"form-control") %>
        </div>
      </div>
    <% end %>
    <%= f.label(:location_id) %>
    <%= f.collection_select(:location_id, @locations, :id, :name) %>
    <%= f.submit(class:"btn btn-primary") %>
  <% end %>
</form>

