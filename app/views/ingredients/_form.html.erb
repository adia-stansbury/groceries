<%= form_for @ingredient do |f| %>
  <form class="form-inline">
    <% [:name, :ndbno].each do |attribute| %>
      <div class="form-group">
        <%= f.label(attribute, class:"col-sm-2 control-label") %>
        <%= f.text_field(attribute, class:"form-control") %>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label(:location_id, class:"col-sm-2 control-label") %>
      <%= f.collection_select(:location_id, @locations, :id, :name, 
                                  class:"form-control") %>
    </div>
    <div class="form-group">
      <%= f.radio_button(:food_source_id, 2) %>
      <%= f.label(:food_source_id_2, 'Plant') %>
      <%= f.radio_button(:food_source_id, 1) %>
      <%= f.label(:food_source_id_1, 'Animal') %>
    </div>
    <div class="form-group">
      <%= f.submit(class:"btn btn-primary") %>
    </div>
  </form>
<% end %>

<h3 class="text-center">
  <a href="https://ndb.nal.usda.gov/ndb/foods" target="_blank">Look up Ndbno</a>
</h3>
