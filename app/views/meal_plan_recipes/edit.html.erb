<div class="container-fluid">
  <div class="page-header"><h3>Edit <%= @recipe.name %> for meal plan</h3></div>
  <div class="jumbotron">
    <%= form_for @meal_plan_recipe do |f| %>
        <% f.hidden_field(:recipe_id) %>
        <% f.hidden_field(:meal_plan_id) %>
      <div class="form-group">
        <h4>Plan to have this recipe on first day of mealplan?</h4>
        <%= f.radio_button :first_day_recipe, 'true' %>
        <%= f.label :first_day_recipe_true, 'true' %>
        <%= f.radio_button :first_day_recipe, 'false' %>
        <%= f.label :first_day_recipe_true, 'false' %>
      </div>
      <div><%= f.submit(class: "btn btn-success") %></div>
    <% end %>
  </div>
</div>
